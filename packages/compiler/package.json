{
  "name": "@hexmon_tech/compiler",
  "version": "0.0.0",
  "description": "acx compiler package.",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "dependencies": {
    "@hexmon_tech/policy-dsl": "workspace:*"
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint src --max-warnings=0",
    "test": "vitest run --passWithNoTests",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "pack:check": "node ../../scripts/pack/check-package.mjs"
  },
  "author": "ACX Authors",
  "keywords": [
    "access-control",
    "authorization",
    "policy",
    "compiler",
    "ir"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/acx-dev/acx.git",
    "directory": "packages/compiler"
  },
  "publishConfig": {
    "access": "public"
  }
}
